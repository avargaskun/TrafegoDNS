# .env.example
# Cloudflare settings
CLOUDFLARE_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE=example.com

# DigitalOcean settings (comming soon)
DIGITALOCEAN_TOKEN=your_digitalocean_api_token
DIGITALOCEAN_DOMAIN=example.com

# DNS provider selection
DNS_PROVIDER=cloudflare  # Options: cloudflare

# Traefik API settings
TRAEFIK_API_URL=http://traefik:8080/api
TRAEFIK_API_USERNAME=
TRAEFIK_API_PASSWORD=

# DNS default settings
DNS_DEFAULT_TYPE=CNAME
DNS_DEFAULT_CONTENT=example.com
DNS_DEFAULT_PROXIED=true
DNS_DEFAULT_TTL=1
DNS_DEFAULT_MANAGE=true

# Application behavior
POLL_INTERVAL=30000
WATCH_DOCKER_EVENTS=true
CLEANUP_ORPHANED=false

# Optional public IP (used for A records)
PUBLIC_IP=

# Label prefixes
DNS_LABEL_PREFIX=dns.
TRAEFIK_LABEL_PREFIX=traefik.